{
  "parser": "babel-eslint",
  "extends": [
    "standard-react",
    "eslint:recommended"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "it": false,
    "expect": false,
    "describe": false,
    "sinon": false,
    "process": false,
    "require": false,
    "module": false,
    "Promise": false
  },
  "rules": {
    "comma-dangle": [
      2,
      "never"
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      1,
      150,
      4,
      {
        "ignoreUrls": true
      }
    ],
    "react/prop-types": 1,
    "react/no-did-mount-set-state": 1,
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "block-spacing": [
      2,
      "always"
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "react/jsx-curly-spacing": [
      2,
      "always"
    ]
  }
}
